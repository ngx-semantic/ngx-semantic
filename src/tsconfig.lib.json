{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../release",
    "alwaysStrict": true,
    "declaration": true,
    "inlineSources": true,
    "declarationMap": true,
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "strictFunctionTypes": true,
    "stripInternal": true,
    "target": "es2020"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "files": ["./ngx-semantic.module.ts"],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
